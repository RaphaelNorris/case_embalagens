# ============================================
# Database Configuration - Oracle
# ============================================

# Oracle RAW Layer
ORACLE_RAW_USER=your_raw_user
ORACLE_RAW_PASSWORD=your_raw_password

# Oracle TRUSTED Layer
ORACLE_TRUSTED_USER=your_trusted_user
ORACLE_TRUSTED_PASSWORD=your_trusted_password

# Oracle REFINED Layer
ORACLE_REFINED_USER=your_refined_user
ORACLE_REFINED_PASSWORD=your_refined_password

# Oracle Connection Details
ORACLE_HOST=your_oracle_host
ORACLE_PORT=1521
ORACLE_SERVICE_NAME=your_service_name

# ============================================
# Database Configuration - SQL Server
# ============================================

SQLSERVER_HOST=your_sqlserver_host
SQLSERVER_PORT=1433
SQLSERVER_DATABASE=your_database_name
SQLSERVER_USER=your_sqlserver_user
SQLSERVER_PASSWORD=your_sqlserver_password

# ============================================
# Application Configuration
# ============================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================
# Data Paths (relative to project root)
# ============================================

DATA_RAW_PATH=project_data_science/data/01 - raw
DATA_TRUSTED_PATH=project_data_science/data/02 - trusted
DATA_ML_PATH=project_data_science/data/03 - ml
DATA_REFINED_PATH=project_data_science/data/04 - refined

# ============================================
# ML Model Configuration
# ============================================

MODEL_REGISTRY_PATH=project_data_science/models
MLFLOW_TRACKING_URI=sqlite:///mlflow.db
MLFLOW_EXPERIMENT_NAME=adami_production_optimization

# ============================================
# Airflow Configuration (if using Airflow)
# ============================================

AIRFLOW_HOME=project_data_engineer
AIRFLOW__CORE__DAGS_FOLDER=project_data_engineer/dags
AIRFLOW__CORE__LOAD_EXAMPLES=False

# ============================================
# API Keys and Secrets (if needed)
# ============================================

# JWT_SECRET_KEY=your_jwt_secret_key_here
# API_KEY=your_api_key_here

# ============================================
# Feature Flags
# ============================================

ENABLE_MONITORING=true
ENABLE_DATA_VALIDATION=true
